{
  "name": "blog-server",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/applicationinsights-js": "^1.0.5",
    "@types/bunyan": "^1.8.4",
    "apollo-server-express": "^2.14.2",
    "applicationinsights": "^1.0.1",
    "applicationinsights-js": "^1.0.15",
    "bunyan": "^1.8.12",
    "bunyan-request": "^1.2.0",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "graphql": "^14.5.8",
    "highlight.js": "^9.12.0",
    "if-env": "^1.0.0",
    "inversify": "^4.11.1",
    "inversify-express-utils": "^5.2.1",
    "marked": "^0.3.7",
    "moment": "^2.19.3",
    "npx": "^10.2.0",
    "reflect-metadata": "^0.1.12",
    "string": "^3.3.3"
  },
  "scripts": {
    "build": "tsc -p ./tsconfig.json && cp -r ./data/ ./build/api/data/",
    "start": "node ./build/api/server | bunyan",
    "test": "npm run test:unit && npm run test:integration",
    "integration": "npm run test:integration",
    "test:unit": "cross-env CI=True npm run test:unit:client",
    "test:unit:client": "react-scripts-ts test --env=jsdom --testResultsProcessor=jest-junit",
    "test:integration": "docker-compose up --build --no-color -d && docker-compose exec -T web bash /usr/src/app/bin/run_tests.sh",
    "pretest:integration": "docker-compose down",
    "posttest:integration": "docker-compose exec -T web cp /usr/src/app/.test_output/react-unit-tests.xml /usr/src/app/.output/ && docker-compose logs --no-color -t >> ./.output/service_logs.log && docker-compose down"
  },
  "devDependencies": {
    "@types/express": "^4.11.1",
    "@types/highlight.js": "^9.12.2",
    "@types/jest": "^21.1.8",
    "@types/marked": "^0.3.0",
    "@types/node": "^8.0.57",
    "@types/string": "0.0.29",
    "cross-env": "^5.1.3",
    "install": "^0.10.2",
    "raf": "^3.4.0",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.2",
    "wdio-junit-reporter": "^0.3.1",
    "wdio-mocha-framework": "^0.5.12",
    "wdio-spec-reporter": "^0.1.3",
    "wdio-visual-regression-service": "^0.8.0",
    "webdriverio": "^4.9.11"
  }
}
