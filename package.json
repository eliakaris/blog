{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "proxy": "http://localhost:3001",
  "jest-junit": {
    "suiteName": "react unit tests",
    "output": "./.test_output/react-unit-tests.xml",
    "classNameTemplate": "{classname}-{title}",
    "titleTemplate": "{classname}-{title}",
    "ancestorSeparator": " â€º ",
    "usePathForSuiteName": "true"
  },
  "dependencies": {
    "@types/applicationinsights-js": "^1.0.5",
    "@types/bunyan": "^1.8.4",
    "applicationinsights": "^1.0.1",
    "applicationinsights-js": "^1.0.15",
    "bunyan": "^1.8.12",
    "bunyan-request": "^1.2.0",
    "compression": "^1.7.1",
    "express": "^4.16.2",
    "highlight.js": "^9.12.0",
    "if-env": "^1.0.0",
    "inversify": "^4.11.1",
    "inversify-express-utils": "^5.2.1",
    "marked": "^0.3.7",
    "moment": "^2.19.3",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router": "^4.2.0",
    "react-router-dom": "4.2.2",
    "react-scripts-ts": "2.8.0",
    "reactstrap": "^5.0.0-alpha.4",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-promise": "^0.5.3",
    "redux-thunk": "^2.2.0",
    "reflect-metadata": "^0.1.12",
    "startbootstrap-clean-blog": "^4.0.0-beta.2",
    "string": "^3.3.3",
    "superagent": "^3.8.2"
  },
  "scripts": {
    "build": "npm run build:client && npm run build:server",
    "build:client": "react-scripts-ts build",
    "build:server": "tsc -p ./server/tsconfig.json",
    "start": "npm run start:client",
    "start:client": "react-scripts-ts start",
    "start:server": "node ./build/server/server | bunyan",
    "test": "npm run test:unit && npm run test:integration",
    "integration": "npm run test:integration",
    "test:unit": "cross-env CI=True npm run test:unit:client",
    "test:unit:client": "react-scripts-ts test --env=jsdom --testResultsProcessor=jest-junit",
    "test:integration": "docker-compose up --build --no-color -d && docker-compose exec -T web bash /usr/src/app/bin/run_tests.sh && docker-compose exec -T web cp /usr/src/app/.test_output/react-unit-tests.xml /usr/src/app/.output/",
    "pretest:integration": "docker-compose down",
    "posttest:integration": "docker-compose logs --no-color -t >> ./.output/service_logs.log && docker-compose down"
  },
  "devDependencies": {
    "@types/chai": "^4.1.0",
    "@types/enzyme": "^3.1.5",
    "@types/enzyme-adapter-react-16": "1.0.1",
    "@types/express": "^4.11.1",
    "@types/highlight.js": "^9.12.2",
    "@types/jest": "^21.1.8",
    "@types/marked": "^0.3.0",
    "@types/node": "^8.0.57",
    "@types/react": "^16.0.28",
    "@types/react-dom": "^16.0.3",
    "@types/react-redux": "^5.0.14",
    "@types/react-router": "4.0.19",
    "@types/react-router-dom": "4.2.3",
    "@types/react-test-renderer": "^16.0.0",
    "@types/reactstrap": "^5.0.6",
    "@types/redux-logger": "^3.0.5",
    "@types/redux-thunk": "^2.1.0",
    "@types/string": "0.0.29",
    "@types/superagent": "^3.5.6",
    "chai": "^4.1.2",
    "cross-env": "^5.1.3",
    "enzyme": "^3.2.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "install": "^0.10.2",
    "jest-junit": "^3.4.1",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.2.0",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.2",
    "wdio-junit-reporter": "^0.3.1",
    "wdio-mocha-framework": "^0.5.12",
    "wdio-spec-reporter": "^0.1.3",
    "wdio-visual-regression-service": "^0.8.0",
    "webdriverio": "^4.9.11"
  }
}
